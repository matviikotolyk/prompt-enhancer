{
    "manifest_version": 3,
    "name": "Claude Prompt Enhancer",
    "version": "1.0",
    "description": "Enhances prompts in Claude using LLM suggestions",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://claude.ai/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://claude.ai/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  